<LinearLayout
    android:id="@+id/item_func"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?attr/mBackground_04dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_func_shareIcon"
        android:src="@drawable/ic_menu_share"
        android:tint="@color/dark_second_primary"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin_half"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/item_func_galleryIcon"
        android:src="@drawable/ic_menu_gallery"
        android:tint="@color/dark_second_primary"
        android:layout_margin="@dimen/activity_horizontal_margin_half"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>