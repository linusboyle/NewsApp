<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_choose_cardview"
    android:background="?attr/mBackground_02dp"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1"
    app:cardBackgroundColor="?attr/mBackground_02dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
    android:layout_marginRight="@dimen/activity_horizontal_margin_half"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <ImageView
        android:id="@+id/tab_choose_cardview_mark"
        android:src="@drawable/ic_visibility_off_white_24dp"
        android:tint="?attr/colorSecondary"
        android:layout_marginStart="@dimen/activity_horizontal_margin_half"
        android:layout_marginTop="@dimen/activity_horizontal_margin_half"
        android:layout_gravity="start|top"
        android:contentDescription="@null"
        android:layout_width="14dp"
        android:layout_height="14dp"/>

    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/tab_choose_cardview_image"
            android:src="@drawable/ic_menu_gallery"
            android:tint="?attr/mTextPrimary"
            android:contentDescription="@null"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tab_choose_cardview_text"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="?attr/mTextPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
